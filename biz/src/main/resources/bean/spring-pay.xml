<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- 支付 -->
	<bean id="payAction" class="com.papa2.client.pay.action.PayAction" parent="baseAction" scope="request">
		<property name="payService" ref="payService" />
	</bean>
	
	<bean id="payService" class="com.papa2.client.pay.service.impl.PayServiceImpl">
		<property name="clientRecordService" ref="clientRecordService" />
	</bean>

</beans>